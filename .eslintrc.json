{
  "root": true,
  "plugins": ["prettier"],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "plugin:@typescript-eslint/eslint-recommended"
      ],
      "env": {
        "browser": true,
        "node": true,
        "es6": true
      },
      "rules": {
        "prettier/prettier": ["error", { "parser": "angular" }],
        "indent": "off",
        "max-len": ["error", {"code": 100, "ignoreUrls": true}], // specify the maximum length of a line in your program (off by default)
        "object-curly-newline": ["error", { "multiline": true, "consistent": true }],
        "operator-linebreak": "off",
        "@angular-eslint/component-class-suffix": [
          "error",
          {
            "suffixes": [
              "Component",
              "Controller",
              "Root"
            ]
          }
        ],
        "@typescript-eslint/explicit-module-boundary-types": "warn",
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/ban-ts-comment": "warn",
        "@typescript-eslint/no-inferrable-types": "off",
        "@typescript-eslint/ban-types": "off",
        "@typescript-eslint/no-non-null-assertion": "off",
        "no-extra-boolean-cast": "off", // disallow double-negation boolean casts in a boolean context
        "no-useless-return": "off",
        "comma-dangle": ["error", "always-multiline"], // disallow or enforce trailing commas
        "semi": ["error", "always"], // require or disallow use of semicolons instead of ASI
        "semi-style": ["error", "last"],
        "object-curly-spacing": ["error", "always"],
        "template-curly-spacing": ["error", "always"],
        "no-console": ["error", { "allow": ["error"]}] // disallow use of console (off by default in the node environment)
      },
      "parserOptions": {
        "sourceType": "module",
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      }
    },
    {
      "files": ["*.html"],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {
        "prettier/prettier": ["error", { "parser": "angular" }]
      }
    },
    {
      "files": ["*.js"],
      "parserOptions": {
        "ecmaVersion": 2017
      }
    }
  ]
}
